{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "files": {
    "includes": ["src/**/*.ts", "tests/**/*.ts"]
  }
}
