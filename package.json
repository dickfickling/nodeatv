{
  "name": "nodeatv",
  "version": "0.1.0",
  "description": "TypeScript library for controlling Apple TV devices",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nodeatv": "dist/cli.js"
  },
  "scripts": {
    "build": "tsgo --project tsconfig.build.json",
    "test": "vitest run",
    "lint": "biome check src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "packageManager": "yarn@4.12.0",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "latest",
    "vitest": "latest"
  },
  "dependencies": {
    "bplist-creator": "^0.1.1",
    "bplist-parser": "^0.3.2",
    "protobufjs": "^8.0.0",
    "zod": "latest"
  }
}
